{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/remix"
    }
  ],
  "routes": [
    {
      "src": "^/build/(.*)$",
      "dest": "/build/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ],
  "env": {
    "SHOPIFY_APP_URL": "https://$VERCEL_URL"
  }
}
